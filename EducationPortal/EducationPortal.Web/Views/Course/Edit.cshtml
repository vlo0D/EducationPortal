@model EducationPortal.Web.Models.AddingCourseModel
@{
    ViewData["Title"] = "Edit Course";
}

<h2>Edit Course</h2>
<div class="container text-center">
    <div asp-validation-summary="ModelOnly"></div>
    <form asp-controller="course" asp-action="edit" asp-route-id="@Model.Id">
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="Name">Course Name</label>
                    <input value="@Model.Name" class="form-control" id="Name" type="text" asp-for="Name" placeholder="Course name" required />
                    <span class="text-danger" asp-validation-for="Name"></span> <br />
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <textarea value="@Model.Description" class="form-control" id="Description" placeholder="Description (min 10 chars)" rows="3" asp-for="Description" required></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="col-8">
                <div class="row">
                    <div class="col form-group">
                        <div>
                            <label asp-for="SkillsId">Select Skills</label>
                        </div>
                        <div>
                            <select class="custom-select" id="SkillsId" asp-for="SkillsId" id="SkillsId" asp-items="@Model.SelectSkills" required>
                            </select>
                        </div>
                    </div>
                    <div class="col form-group">
                        <div>
                            <label asp-for="MaterialsId">Select Materials</label>
                        </div>
                        <div>
                            <select asp-for="MaterialsId" asp-items="@Model.SelectMaterials" class="custom-select" id="SkillsId" required>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <p>
            <input class="btn btn-primary" type="submit" value="Edit Course" />
        </p>
    </form>
</div>