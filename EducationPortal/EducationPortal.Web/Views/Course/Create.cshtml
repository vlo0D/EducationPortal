@model EducationPortal.Web.Models.AddingCourseModel
@{
    ViewData["Title"] = "Add Course";
}

<h2>Adding Course</h2>
<div class="container text-center">
    <div asp-validation-summary="ModelOnly"></div>
    <form asp-controller="course" asp-action="create" method="post">
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="Name">Course Name</label>
                    <input class="form-control" id="Name" type="text" asp-for="Name" placeholder="Course name" required />
                    <span class="text-danger" asp-validation-for="Name"></span> <br />
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <textarea class="form-control" id="Description" placeholder="Description (min 10 chars)" rows="3" asp-for="Description" required></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="col-8">
                <div class="row">
                    <div class="col form-group">
                        @if (Model.SelectSkills.Count != 0)
                        {
                            <div>
                                <label asp-for="SkillsId">Select Skills</label>
                            </div>
                            <div>
                                <select class="custom-select" id="SkillsId" asp-for="SkillsId" id="SkillsId" asp-items="@Model.SelectSkills" required>
                                </select>
                            </div>
                        }
                        else
                        {
                            <div>No Skills Yet</div>
                        }
                        <div><a asp-controller="Skill" asp-action="Create">Add New Skill</a></div>
                    </div>
                    <div class="col form-group">
                        @if (Model.SelectMaterials.Count != 0)
                        {
                            <div>
                                <label asp-for="MaterialsId">Select Materials</label>
                            </div>
                            <div>
                                <select asp-for="MaterialsId" asp-items="@Model.SelectMaterials" class="custom-select" id="SkillsId" required>
                                </select>
                            </div>
                        }
                        else
                        {
                            <div>No Materials Yet</div>
                        }
                        <div><a asp-controller="Material" asp-action="Create">Add New Material</a></div>
                    </div>
                </div>
            </div>
        </div>
        <p>
            <input class="btn btn-primary" type="submit" value="Add Course" />
        </p>
    </form>
</div>