@model EducationPortal.BLL.DTO.BookMaterialDTO;

<h2>Adding Book</h2>
<form asp-controller="Material" asp-action="AddBook">
    <p>
        <label asp-for="Name">Name</label>
        <input type= "text" asp-for= "Name" required/>
        <label asp-for="Author">Author</label>
        <input type= "text" asp-for= "Author" required/>
        <label asp-for="Pages">Pages</label>
        <input type= "number" asp-for= "Pages" required/>
        <label asp-for = "Format">Format</label>
        <input type= "text" asp-for= "Format" required/>
        <label asp-for = "Year">Year</label>
        <input type= "number" asp-for= "Year" required/>
    </p>
    <p>
        <input type ="submit" value="Send"/>
    </p>
</form>